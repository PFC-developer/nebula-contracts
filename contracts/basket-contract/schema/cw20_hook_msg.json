{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cw20HookMsg",
  "anyOf": [
    {
      "description": "After received, registers the received amount and prepares it to be used for minting",
      "type": "object",
      "required": [
        "stage_asset"
      ],
      "properties": {
        "stage_asset": {
          "type": "object"
        }
      }
    },
    {
      "description": "Burns assets",
      "type": "object",
      "required": [
        "burn"
      ],
      "properties": {
        "burn": {
          "type": "object",
          "properties": {
            "asset_weights": {
              "description": "optional proposed set of weights to use",
              "type": [
                "array",
                "null"
              ],
              "items": {
                "type": "integer",
                "format": "uint32",
                "minimum": 0.0
              }
            }
          }
        }
      }
    }
  ]
}
